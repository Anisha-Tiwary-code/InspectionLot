<mvc:View controllerName="com.reckitt.zqminsplotrr.controller.InspectionLotDetailQM" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m"
xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core">
	<Page title="{i18n>DetailPageTitle} - {InspectionLotHDRModel>/InspectionLot}">
		<content>
			<core:Fragment fragmentName="com.reckitt.zqminsplotrr.view.Fragments.LotHeaderData" type="XML"/>
			<Wizard  id="idWizard" showNextButton="false" >
				<WizardStep id="OperationStep" title="{i18n>lblOperation}" activate="onActivate" nextStep="EquipmentStep">
					<core:Fragment fragmentName="com.reckitt.zqminsplotrr.view.Fragments.Operations" type="XML"/>
				</WizardStep>
				<WizardStep id="EquipmentStep" title="{i18n>lblInspectionPoint}" activate="onActivate" class="clsResultRecord">
					<core:Fragment fragmentName="com.reckitt.zqminsplotrr.view.Fragments.EquipmentsQM" type="XML"/>
				</WizardStep>
				<WizardStep id="ResultRecordingStep" title="{i18n>lblResult}" activate="onActivate" class="clsResultRecord">
					<core:Fragment fragmentName="com.reckitt.zqminsplotrr.view.Fragments.RecordResultQM" type="XML"/>
					<Panel headerText="{i18n>lblContolCharts}" expandable="true" expanded="true" visible="{= ${filterModel>/chart} === true ? true : false}">
					<core:Fragment fragmentName="com.reckitt.zqminsplotrr.view.Fragments.ControlChart" type="XML" />
					</Panel>
				</WizardStep>
				<WizardStep id="AttachmentStep" title="{i18n>lblAttachments}" class="clsResultRecord">
					<core:Fragment fragmentName="com.reckitt.zqminsplotrr.view.Fragments.Attachments" type="XML"/>
				</WizardStep>
			</Wizard>
		</content>
		<footer>
			<OverflowToolbar>
    			<ToolbarSpacer/>
				<Button text="{i18n>btnUnlock}" type="Emphasized"  class="footerBtnWidth" press="onUnlock"/>
    			<Button text="{i18n>btnValuate}" type="Emphasized"  class="footerBtnWidth" press="onValuate" visible="{= ${AppModeModel>/enableBtnValuate} === true ||  (${AppModeModel>/enableBtnValuateQM} === true &amp;&amp; ${filterModel>/inspectionlottypes} === 1) ? true : false}"/>
    			<!-- <Button text="{i18n>btnSave}" type="Emphasized"  class="footerBtnWidth" press="onSave" visible="{AppModeModel>/enableBtnSave}"/> -->
				<Button text="{i18n>btnSave}" type="Emphasized"  class="footerBtnWidth" press="onSaveQM(0)" visible="{AppModeModel>/enableBtnSaveQM}"/>
				<!-- <Button text="{i18n>btnClosure}" type="Emphasized" class="footerBtnWidth" press="onCloseResult" visible="{AppModeModel>/enableBtnClose}"/> -->
				<Button text="{i18n>btnClosure}" type="Emphasized" class="footerBtnWidth" press="onCloseResultQM" visible="{AppModeModel>/enableBtnSaveQM}"/>
				<!-- <Button text="{i18n>btnClosure}" type="Emphasized" class="footerBtnWidth" press="onCloseResultWithoutDS" visible="{AppModeModel>/enableBtnCloseWoDS}"/> -->
				<!-- <Button text="{i18n>btnDigitSign}" type="Emphasized" class="footerBtnWidth" press="onDigitalSign" visible="{AppModeModel>/enableBtnDigitalSign}"/> -->
				<Button text="{i18n>btnBack}" type="Emphasized"  class="footerBtnWidth" press="onNavBack"/>
				<Button text="{i18n>btnExit}" type="Emphasized" class="footerBtnWidth" press="onExitNav"/>
			</OverflowToolbar>
		</footer>
	</Page>
</mvc:View>