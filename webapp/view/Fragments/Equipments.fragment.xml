<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form">
	<Table  id="equipTable" items="{path: 'EquipmentModel>/EquipmentSet', templateShareable: true}" noDataText="{i18n>lblnoData}" mode="SingleSelectLeft" selectionChange="onCommonItemSelected">
		<headerToolbar>
			<OverflowToolbar>
				<content>
					<ToolbarSpacer/>
					<Button icon="sap-icon://add" press="onAddSample" visible="{= ${filterModel>/inspectionlottypes} === 1 ? true : false}"/>
				</content>
			</OverflowToolbar>
		</headerToolbar>
		<columns>
			<Column visible="{= ${filterModel>/inspectionlottypes} === 1 ? false : true}">
				<Text text="{i18n>lblInspectionPoint}"/>
			</Column>
			<Column minScreenWidth="Tablet" demandPopin="true" visible="{= ${filterModel>/inspectionlottypes} === 1 ? true : false}">
				<Text text="{i18n>lblPhySample}"/>
			</Column>
			<Column visible="{= ${filterModel>/inspectionlottypes} === 1 ? false : true}">
				<Text text="{i18n>lblEquipment} / {i18n>lblFunctionalLocation}"/>
			</Column>
			<Column visible="{= ${filterModel>/inspectionlottypes} === 1 ? false : true}"/>
			<Column minScreenWidth="Tablet" demandPopin="true" visible="{= ${filterModel>/inspectionlottypes} === 1 ? false : true}">
				<Text text="{i18n>lblDescription}" />
			</Column>
			<Column minScreenWidth="Tablet" demandPopin="true" visible="{= ${filterModel>/inspectionlottypes} === 1 ? false : true}">
				<Text text="{i18n>lblTestEquipment}"/>
			</Column>
			<Column minScreenWidth="Tablet" demandPopin="true"  width="6em" visible="{= ${filterModel>/inspectionlottypes} === 1 ? false : true}"/>
			<Column minScreenWidth="Tablet" demandPopin="true"  width="6em" visible="{= ${filterModel>/inspectionlottypes} === 1 ? false : true}"/>
			<Column minScreenWidth="Tablet" demandPopin="true" visible="{= ${filterModel>/inspectionlottypes} === 1 ? false : true}">
				<Text text="{i18n>lblTestEquipmentDesc}"/>
			</Column>
			<Column minScreenWidth="Tablet" demandPopin="true"  width="6em" visible="{= ${filterModel>/inspectionlottypes} === 1 ? true : false}">
			<Text text="{i18n>lblPrint}"/>
			</Column>
		</columns>
		<items>
			<ColumnListItem>
				<cells>
					<Text text="{EquipmentModel>InspectionPoint}" visible="{= ${filterModel>/inspectionlottypes} === 1 ? false : true}"/>
					<Text text="{EquipmentModel>PhysSmpl}" visible="{= ${filterModel>/inspectionlottypes} === 1 ? true : false}"/>
					<Text text="{EquipmentModel>FLocTxt}" visible="{= ${filterModel>/inspectionlottypes} === 1 ? false : true}"/>
					<Button icon="sap-icon://document-text" tooltip="{i18n>titleDocuments}" visible="{= ${filterModel>/inspectionlottypes} === 1 ? false : true}" enabled="{= ${EquipmentModel>EquipDms} === 'X' || ${EquipmentModel>FuncLocDms} === 'X'}" press="onBCSFuncLocDoc">
						<layoutData>
							<f:ColumnElementData cellsSmall="2" cellsLarge="1" />
						</layoutData>						
					</Button>
					<Text text="{EquipmentModel>EquiDesc}" visible="{= ${filterModel>/inspectionlottypes} === 1 ? false : true}"/>
					<Input valueHelpOnly="false" value="{EquipmentModel>TestEqui}" showValueHelp="true" valueHelpRequest="onVHTestEquipment" change="onChangeEquipmentDetail" enabled="{EquipmentModel>enbaleTestEquip}"/>
					<Button icon="sap-icon://bar-code" text="{i18n>btnScan}" press="onBCSTestEquipment" enabled="{EquipmentModel>enbaleTestEquip}" visible="{= ${filterModel>/inspectionlottypes} === 1 ? false : true}">
						<layoutData>
							<f:ColumnElementData cellsSmall="3" cellsLarge="2"/>
						</layoutData>
					</Button>
					<Button icon="sap-icon://document-text" tooltip="{i18n>titleDocuments}" visible="{= ${filterModel>/inspectionlottypes} === 1 ? false : true}" enabled="{= ${EquipmentModel>TestEquipDms} === 'X'}" press="onBCSEquipmentDoc">
						<layoutData>
							<f:ColumnElementData cellsSmall="2" cellsLarge="1" />
							</layoutData>
					</Button>																	
					<Text text="{EquipmentModel>TestEquiDesc}" visible="{= ${filterModel>/inspectionlottypes} === 1 ? false : true}"/>
					<Button icon="sap-icon://print" press="onPrint" visible="{= ${filterModel>/inspectionlottypes} === 1 ? true : false}">
						<layoutData>
							<f:ColumnElementData cellsSmall="3" cellsLarge="2"/>
						</layoutData>
					</Button>
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</core:FragmentDefinition>